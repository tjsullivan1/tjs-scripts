{
    "properties": {
      "displayName": "Add Expiration Date New",
      "policyType": "Custom",
      "mode": "All",
      "parameters": {
        "tagName": {
          "type": "String",
          "metadata": {
            "displayName": "Tag Name",
            "description": "Name of the tag, such as 'Date'"
          },
          "defaultValue": "ExpirationDate"
        },
        "days_to_add": {
          "type": "Integer",
          "metadata": {
            "displayName": "Tag Name",
            "description": "Name of the tag, such as 'Date'"
          },
          "defaultValue": 5
        }
      },
      "policyRule": {
        "if": {
          "allOf": [
            {
              "field": "[concat('tags[', parameters('tagName'), ']')]",
              "exists": "false"
            },
            {
              "field": "type",
              "equals": "Microsoft.Resources/subscriptions/resourceGroups"
            }
          ]
        },
        "then": {
          "effect": "modify",
          "details": {
            "roleDefinitionIds": [
              "/providers/microsoft.authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c"
            ],
            "operations": [
              {
                "operation": "add",
                "field": "[concat('tags[', parameters('tagName'), ']')]",
                "value": "[addDays(utcNow(), parameters('days_to_add'))]"
              }
            ]
          }
        }
      }
    }
  }